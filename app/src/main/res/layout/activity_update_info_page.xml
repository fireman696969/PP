<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.UpdateInfoPage.UpdateInfoPage"
    android:background="#0D6EBC">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tvUpdateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update info"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:textColor="#0D6EBC"
                android:textStyle="bold"
                android:layout_below="@+id/tvUpdateInfo"
                />

            <LinearLayout
                android:id="@+id/layFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_below="@+id/tvId"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_account_box_24"
                    android:layout_marginHorizontal="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full name: "
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
               <EditText
                   android:id="@+id/edFullNameUpdateInfo"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Elon Levy"
                   android:textColor="#0D6EBC"
                   android:inputType="text"
                   android:maxLength="15"
                   />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/layAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_below="@+id/layFullName"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_elderly_24"
                    android:layout_marginHorizontal="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age: "
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    />
                <EditText
                    android:id="@+id/edAgeUpdateInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textColor="#0D6EBC"
                    android:inputType="number"
                    android:maxLength="2"
                    />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/layPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_below="@+id/layAge"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_enhanced_encryption_24"
                    android:layout_marginHorizontal="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password: "
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/edPassUpdateInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="elon"
                    android:textColor="#0D6EBC"
                    android:maxLength="15"

                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layUpdateBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_below="@+id/layPass"
                android:layout_centerHorizontal="true"
                >
                <Button
                    android:id="@+id/btnUpdateInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_green"

                    />

                <Button
                    android:id="@+id/btnBackUpdateInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_red"

                    />
            </LinearLayout>








        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>